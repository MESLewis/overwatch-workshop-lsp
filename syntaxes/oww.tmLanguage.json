{
    "$schema": "https://raw.githubusercontent.com/martinring/tmlanguage/master/tmlanguage.json",
    "name": "Overwatch Workshop Script",
    "scopeName": "source.oww",
    "patterns": [
        {
            "include": "#keyword"
        },
        {
            "include": "#comment"
        },
        {
            "include": "#string"
        },
        {
            "include": "#function"
        },
        {
            "include": "#paren-expression"
        }
    ],
    "repository": {
        "function": {
            "patterns": [
                {
                    "name": "support.function.oww",
                    "match": "([A-Za-z0-9\\-_]\\s?)+(?=\\()"
                }
            ]
        },
        "keyword": {
            "patterns": [
                {
                    "name": "keyword.other.oww",
                    "match": "^\\s*\\b[a-z]+\\b"
                }
            ]
        },
        "comment": {
            "patterns": [
                {
                    "name": "comment.line.oww",
                    "match": "^\\s*\".*"
                }
            ]
        },
        "string": {
            "name": "string.quoted.double.oww",
            "begin": "\"",
            "end": "\"",
            "patterns": [
                {
                    "name": "constant.character.escape",
                    "match": "\\\\."
                }
            ]
        },
        "number": {
            "patterns": [
                {
                    "name": "constant.numeric.oww",
                    "match": "[0-9]+(\\.[0-9]+)?"
                }
            ]
        },
        "paren-expression": {
            "patterns": [
                {
                    "begin": "\\(",
                    "beginCaptures": {
                        "0": {
                            "name": "punctuation.paren.begin.oww"
                        }
                    },
                    "end": "\\)",
                    "endCaptures": {
                        "0": {
                            "name": "punctuation.paren.end.oww"
                        }
                    },
                    "name": "expression.group.oww",
                    "patterns": [
                        {
                            "include": "#number"
                        }
                    ]
                }
            ]
        }
    }
}